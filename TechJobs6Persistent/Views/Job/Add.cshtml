@using TechJobs6Persistent.ViewModels
@model AddJobViewModel

@*add new for group
    add label + input tags to the new DIV to add new employers
    add a link *@

<h1>Add Job</h1>

<form asp-controller="Job" asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        <label asp-for="EmployerId">Employer</label>
        <select asp-for="EmployerId" asp-items="Model.Employers"></select>
        <a asp-controller="Employer" asp-action="Create">Add New Employers</a>
        <span asp-validation-for="EmployerId" class="text-danger"></span>
    </div>

    <input type="submit" value="Add Job" />
</form>