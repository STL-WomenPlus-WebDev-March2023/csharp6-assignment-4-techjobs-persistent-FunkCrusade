@using TechJobs6Persistent.ViewModels
@model AddEmployerViewModel

@* need asp-for with tag helpers and using view model*@

<h1>Add New Employer</h1>

<form asp-controller="Employer" asp-action="ProcessCreateEmployerForm" method="post">

    <div class="form-group">
        <label asp-for = "Name"></label>
        <input asp-for="Name" class="form-control" />
        <span  asp-for="Name" class="text-danger"> </span>
    </div>

    <br />

    <div class="form-group">
        <label asp-for="Location"></label>
        <input asp-for="Location" class="form-control" />
        <span asp-for="Location" class="text-danger"> </span>
    </div>

    <br />

    <input type="submit" value="Add Employer" />

</form>